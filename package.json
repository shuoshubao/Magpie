{
  "name": "Magpie",
  "version": "1.1.0",
  "private": true,
  "description": "Electron 学习",
  "main": "./main/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:shuoshubao/electron-learn.git"
  },
  "scripts": {
    "start": "react-cli serve & node bin/copy-npm & NODE_ENV=development nodemon --exec electron ./main/index.js",
    "build": "rm -rf dist && react-cli build && npx electron-builder build",
    "commit": "npx git-cz",
    "prettier": "npx prettier --write",
    "lint": "npx eslint --ext .ts,.tsx,.js,.jsx,.vue -f html -o ESLintReport.html --resolve-plugins-relative-to .",
    "lint:style": "npx stylelint --fix -o StyleLintReport.html --aei --custom-formatter node_modules/stylelint-formatters-html **/*.{css,less,scss,sass}"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@ke/form": "^2.1.5",
    "@ke/standard": "^1.3.0",
    "@ke/table": "^2.1.1",
    "@nbfe/tools": "^0.2.14",
    "antd": "^4.20.0",
    "axios": "^0.26.1",
    "electron-log": "^4.4.6",
    "electron-store": "^8.0.1",
    "execa": "^5.0.0",
    "fix-path": "3.0.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.1",
    "highlight.js": "^11.5.1",
    "html2canvas": "^1.4.1",
    "ini": "^3.0.0",
    "ip": "^1.1.5",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "prettier": "^2.6.2",
    "react": "^17.0.2",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.2",
    "react-json-view": "^1.21.3",
    "react-markdown": "^8.0.2",
    "react-router-dom": "5.2.0",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@jiaoyi/s3": "^0.1.7",
    "@ke/react-cli": "^1.2.2",
    "electron": "^18.0.1",
    "electron-builder": "^23.0.3",
    "nodemon": "^2.0.15"
  },
  "build": {
    "productName": "Magpie",
    "appId": "org.erb.shuoshubao",
    "files": [
      "package.json",
      "prettier.config.js",
      "stylelint.config.js",
      "CHANGELOG.md",
      "public",
      "main",
      "server",
      "dist",
      "node_modules"
    ],
    "mac": {
      "category": "utilities",
      "target": [
        "dmg"
      ],
      "icon": "./public/icon.png"
    },
    "extends": null
  },
  "nodemonConfig": {
    "ignore": [
      "bin/**",
      "dist/**",
      "public/**",
      "src/**",
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx,js,jsx,vue,css,less,scss,sass,json,md}": [
        "prettier --write",
        "git add"
      ],
      "*.{css,less,scss,sass}": [
        "npx stylelint --fix",
        "git add"
      ],
      "*.{ts,tsx,js,jsx,vue}": [
        "eslint -f table",
        "git add"
      ]
    },
    "ignore": [
      "CHANGELOG.md"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
