{
  "name": "Magpie",
  "version": "1.2.0",
  "private": true,
  "description": "前端工作台",
  "main": "./main/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:shuoshubao/Magpie.git"
  },
  "author": "shuoshubao <759979885@qq.com>",
  "scripts": {
    "start": "react-cli serve & node bin/copy-npm & NODE_ENV=development nodemon --exec electron ./main/index.js",
    "build": "rm -rf dist && react-cli build && npx electron-builder build",
    "commit": "npx git-cz",
    "prettier": "npx prettier --write",
    "lint": "npx eslint --ext .ts,.tsx,.js,.jsx,.vue -f html -o ESLintReport.html",
    "lint:style": "npx stylelint --fix -o StyleLintReport.html --aei --custom-formatter node_modules/stylelint-formatters-html **/*.{css,less,scss,sass}"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@nbfe/components": "^0.3.0",
    "@nbfe/standard": "^1.1.1",
    "@nbfe/tools": "^0.2.19",
    "antd": "^4.20.0",
    "axios": "^0.26.1",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "execa": "^5.0.0",
    "fix-path": "3.0.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.1",
    "highlight.js": "^11.5.1",
    "html2canvas": "^1.4.1",
    "ini": "^3.0.0",
    "ip": "^1.1.5",
    "jscpd": "^3.4.5",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.2",
    "react-router-dom": "^6.8.0",
    "remark-gfm": "^3.0.1",
    "ssh-config": "^4.1.4"
  },
  "devDependencies": {
    "@nbfe/react-cli": "^0.3.5",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.15"
  },
  "build": {
    "productName": "Magpie",
    "appId": "com.electron.shuoshubao",
    "files": [
      "package.json",
      "prettier.config.js",
      "stylelint.config.js",
      "CHANGELOG.md",
      "public",
      "main",
      "server",
      "dist",
      "node_modules"
    ],
    "mac": {
      "category": "Developer Tools",
      "target": [
        "dmg"
      ],
      "icon": "./public/icon.png"
    },
    "extends": null
  },
  "nodemonConfig": {
    "ignore": [
      "bin/**",
      "dist/**",
      "public/**",
      "src/**",
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx,js,jsx,vue,css,less,scss,sass,json,md}": [
        "prettier --write",
        "git add"
      ],
      "*.{css,less,scss,sass}": [
        "npx stylelint --fix",
        "git add"
      ],
      "*.{ts,tsx,js,jsx,vue}": [
        "eslint -f table",
        "git add"
      ]
    },
    "ignore": [
      "CHANGELOG.md"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
